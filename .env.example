# DragonLens Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=DragonLens
DEBUG=False

# Database
# PostgreSQL (default)
POSTGRES_USER=dragonlens
POSTGRES_PASSWORD=dragonlens
POSTGRES_DB=dragonlens
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://dragonlens:dragonlens@localhost:5432/dragonlens

# SQLite (optional fallback)
# DATABASE_URL=sqlite:///./dragonlens.db

# Knowledge DB (SQLite, local file)
KNOWLEDGE_DATABASE_URL=sqlite:///./data/knowledge.db

# Turso knowledge DB (global)
# TURSO_DATABASE_URL=libsql://dragonlens-knowledge-koehnden.aws-us-east-1.turso.io
# TURSO_AUTH_TOKEN=
# TURSO_READ_ONLY_AUTH_TOKEN=
# KNOWLEDGE_DB_MAX_BYTES=104857600
# KNOWLEDGE_ALLOW_NON_FEEDBACK_WRITES=false

# Feedback pipeline
# FEEDBACK_SANITY_CHECKS_ENABLED=true
# FEEDBACK_TRIGGER_RERUN_ENABLED=true

# Redis
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_QUEUE_NAME=dragon-lens

# Remote LLM APIs
# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# Kimi (Moonshot)
KIMI_API_KEY=
KIMI_API_BASE=https://api.moonshot.cn/v1

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
# OPENROUTER_HTTP_REFERER=  # Optional: Your site URL
# OPENROUTER_APP_TITLE=  # Optional: Your app name

# Ollama (Local LLMs)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_TRANSLATION=qwen2.5:7b
OLLAMA_MODEL_SENTIMENT=qwen2.5:7b
OLLAMA_MODEL_NER=qwen2.5:7b
OLLAMA_MODEL_MAIN=qwen2.5:7b

# Sentiment Service (Erlangshen microservice)
USE_ERLANGSHEN_SENTIMENT=true
SENTIMENT_SERVICE_URL=http://127.0.0.1:8100

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# Encryption (Required for API key storage)
# Generate a secure key with: python -c 'import secrets; print(secrets.token_hex(32))'
ENCRYPTION_SECRET_KEY=your_secure_encryption_key_here

# Streamlit
STREAMLIT_PORT=8501
