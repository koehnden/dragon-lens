# DragonLens Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=DragonLens
DEBUG=False

# Database
# For SQLite (default):
DATABASE_URL=sqlite:///./dragonlens.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/dragonlens

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Remote LLM APIs
# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# Kimi (Moonshot)
KIMI_API_KEY=
KIMI_API_BASE=https://api.moonshot.cn/v1

# Ollama (Local LLMs)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_TRANSLATION=qwen2.5:7b
OLLAMA_MODEL_SENTIMENT=qwen2.5:7b
OLLAMA_MODEL_NER=qwen2.5:7b
OLLAMA_MODEL_MAIN=qwen2.5:7b

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# Streamlit
STREAMLIT_PORT=8501
